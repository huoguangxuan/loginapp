extends layout
block content
	h1 #{title}
	form(method='POST',action='/edit/'+article._id)
		#from-group
			label Title:
			input.form-control(name='title',type='text' value=article.title)
		#from-group
			label Body:
			textarea.form-control(name='body')= article.body
		br
		input.btn.btn-primary(type='submit',value='submit')