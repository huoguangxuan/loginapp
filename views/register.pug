extends layout
block content
    form.form-signin(action='/users/register', method='post')
        h2.form-signin-heading Please sign up
        label.sr-only(for='inputName') Name
        input#inputName.form-control(type='text', autocomplete='off', placeholder='Username', required='', autofocus='', name='username')
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', autocomplete='off', placeholder='Email address', required='', autofocus='', name='email')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', autocomplete='off', placeholder='Password', required='', name='password')
        label.sr-only(for='confirmPassword') Password2
        input.form-control.confirmPassword(type='password', placeholder='confirm Password', required='', name='password2')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up