extends layout

block content
	h1= article.title
	h5 Written by #{currentauthor}
	p= article.body
	hr
	ul
		li #{content},#{timestamp}
	if user
		if user.id ==article.author
			a.btn.btn-default(href='/edit/'+article._id) Edit
			a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete
		div.form-group
			form(method='POST',action='/article/'+article._id)
				textarea.form-control(name='content')
				br
				input.btn.btn-primary(value='submit',type='submit')